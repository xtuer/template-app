.SideBarWidget {
    background: gray;
    min-width: 200px;
    max-width: 200px;
    padding: 0px;
    background: rgb(73, 80, 95);
}

.GroupButton, .GroupItemButton {
    color: #BBB;
}

.GroupButton:hover, .GroupItemButton:hover {
    color: #EEE;
}
.GroupButton {
    border: 0;
    height: 50px;
    font-size: 16px;
    text-align: left;
    padding-left: 6px;

    background: rgb(73, 80, 95);
    icon-size: 25px 25px;
}

.GroupItemButton {
    border: 0;
    height: 50px;
    font-size: 14px;
    text-align: left;
    padding-left: 35px;

    background: rgb(54, 62, 78);
    icon-size: 20px 20px;
    qproperty-icon: url(img/sidebar/report.png);
}
.GroupItemButton:checked {
    color: #EEE;
    background: rgb(52, 142, 237);
}

/* 根据按钮的 objectName 设置每一个按钮的图标 */
#groupButton1 {
    qproperty-icon: url(img/sidebar/home.png);
}
#groupButton2 {
    qproperty-icon: url(img/sidebar/warn.png);
}
#itemButton1 {
    qproperty-icon: url(img/sidebar/add.png);
}
#itemButton2 {
    qproperty-icon: url(img/sidebar/user.png);
}
#itemButton3 {
    qproperty-icon: url(img/sidebar/curve.png);
}
#itemButton4 {
    qproperty-icon: url(img/sidebar/audit.png);
}
#itemButton5 {
    qproperty-icon: url(img/sidebar/setting.png);
}
#itemButton6 {
    qproperty-icon: url(img/sidebar/help.png);
}
#itemButton7 {
    qproperty-icon: url(img/sidebar/security.png);
}
#itemButton8 {
